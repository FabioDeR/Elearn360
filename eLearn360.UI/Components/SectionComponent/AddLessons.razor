@using eLearn360.UI.Shared.Component

<h3 class="title">Ajouter une ou plusieurs leçons à la section</h3>

@if (_isLoading)
{
    <Loader />
}
else
{
    <h5 class="mt-4 mb-3 font-weight-bold">Leçons privées</h5>
    <table class="table mb-0">
        <tbody>
            @foreach (var lesson in PrivateLessons)
            {
                <tr>
                    <td class="fw-bold">@lesson.Name</td>
                    <td>@lesson.Description</td>
                    <td class="d-flex justify-content-end">
                        @if (ListLessonId.Contains(lesson.Id))
                        {
                            <button class="btn btn-outline-danger" @onclick="() =>DeleteLesson(lesson.Id)"><span class="oi oi-minus" aria-hidden="true"></span></button>
                        }
                        else
                        {
                            <button class="btn btn-global" @onclick="() =>AddLesson(lesson.Id)"><span class="oi oi-plus" aria-hidden="true"></span></button>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (PublicLessons.Count > 0)
    {
        <h5 class="mt-4 mb-3 font-weight-bold">Leçons publiques</h5>
        <table class="table mb-0">
            <tbody>
                @foreach (var lesson in PublicLessons)
                {
                    <tr>
                        <td class="fw-bold">@lesson.Name</td>
                        <td>@lesson.Description</td>
                        <td class="d-flex justify-content-end">

                            @if (ListLessonId.Contains(lesson.Id))
                            {
                                <button class="btn btn-outline-danger" @onclick="() =>DeleteLesson(lesson.Id)"><span class="oi oi-minus" aria-hidden="true"></span></button>
                            }
                            else
                            {
                                <button class="btn btn-global" @onclick="() =>AddLesson(lesson.Id)"><span class="oi oi-plus" aria-hidden="true"></span></button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}