@page "/organizationlistoverview"
@using eLearn360.UI.Shared.Component
@using eLearn360.Data.VM.Policies
@attribute [Authorize(Policy = Policies.IsSuperAdmin)]
<PageTitle>Organisme</PageTitle>

<div class="container my-5">

    <div class="d-flex justify-content-between w-100">
        <h5 class="col title">Liste des organismes</h5>
        <NavLink href="organizationadd" class="btn btn-global"><span class="oi oi-plus me-2" aria-hidden="true"></span>Ajouter un nouvel organisme</NavLink>
    </div>

    @if (_isLoading)
    {
        <Loader />
    }
    else
    {
        <table class="table table-hover my-5">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Site Web</th>
                    <th scope="col" class="text-end">Éditer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var organization in OrganizationList)
                {
                    <tr>
                        <td class="fw-bold">@organization.Name</td>
                        <td>@organization.City</td>
                        <td>@organization.Phone</td>
                        <td>@organization.Email</td>
                        <td><a href="@organization.Website" class="link-text">@organization.Website</a></td>
                        <td class="text-end">
                            <a class="btn btn-global me-1" href="organizationedit/@organization.Id"><span class="oi oi-pencil" aria-hidden="true"></span></a>
                            <a class="btn btn-global" href="userorganizationlistoverview/@organization.Id"><span class="oi oi-person" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>

    }
</div>
