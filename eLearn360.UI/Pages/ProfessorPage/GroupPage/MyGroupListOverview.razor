@page "/mygrouplistoverview"
@using eLearn360.Data.VM.Policies
@using eLearn360.UI.Shared.Component


<div class="my-5">
    <div class="container">
        @if (_isLoading)
        {
            <Loader />
        }
        else
        {
            <div class="row mt-4 mb-5">
                <div class="px-2 mx-2 pb-2 mb-4 w-100 border-bottom d-flex justify-content-between">
                    <h4 class="title">Mes groupes</h4>
                    @*                        <a class="btn btn-global" href="reportcourseoverview/@UserId/@group.Id">Voir mon historique</a>*@
                </div>
                @foreach (var group in Groups)
                {
                    <div class="col-6 col-md-4 col-lg-2 mb-4">
                        <div class="card shadow">
                            <img src="@group.ImageUrl" class="card-img-top h-auto" alt="image du parcours">
                            <div class="card-body">
                                <h5 class="card-title text-truncate">@group.Name</h5>
                                <a href="/studentlistoverview/@group.Id" class="btn btn-global d-flex justify-content-center">Voir ce groupe</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

    </div>
</div>
